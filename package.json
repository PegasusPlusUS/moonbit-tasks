{
  "name": "moonbit-tasks",
  "displayName": "Moonbit Tasks",
  "description": "Add smart tasks for moonbit and other project",
  "publisher": "PegasusCadence",
  "version": "0.12.2024120606",
  "icon": "images/extension-icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pegasusplusus/moonbit-tasks.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/Cargo.toml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Moonbit tasks Settings",
      "properties": {
        "moonbit-tasks.moonPath": {
          "type": "string",
          "default": "${workspaceFolder}",
          "description": "Set the directory for moon"
        },
        "moonbit-tasks.scanSubdirectoryForProject": {
          "type": "boolean",
          "default": true,
          "description": "Scan subdirectory for project"
        },
        "moonbit-tasks.languageHandlerDef.json": {
          "type": "string",
          "default": "",
          "description": "Define cmd for language"
        },
        "moonbit-tasks.currentRepository": {
          "type": "string",
          "default": "",
          "description": "Path of the currently selected Git repository",
          "scope": "window"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "myExplorer",
          "title": "My Explorer",
          "icon": "resources/icon.png"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "myGitTasksCustomView",
          "name": "Smart Tasks",
          "type": "webview",
          "retainContextWhenHidden": true
        }
      ]
    },
    "commands": [
      {
        "command": "moonbit-tasks.commit",
        "title": "Commit",
        "icon": "$(check)"
      },
      {
        "command": "moonbit-tasks.push",
        "title": "Push",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "moonbit-tasks.pull",
        "title": "Pull",
        "icon": "$(arrow-down)"
      },
      {
        "command": "moonbit-tasks.fetch",
        "title": "Fetch",
        "icon": "$(sync)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "moonbit-tasks.commit",
          "when": "view == myGitTasksCustomView && moonbit-tasks.hasStagedChanges == true",
          "group": "navigation@1"
        },
        {
          "command": "moonbit-tasks.push",
          "when": "view == myGitTasksCustomView && moonbit-tasks.hasUnpushedChanges == true",
          "group": "navigation@2"
        },
        {
          "command": "moonbit-tasks.pull",
          "when": "view == myGitTasksCustomView && moonbit-tasks.hasUnpulledChanges == true",
          "group": "navigation@3"
        },
        {
          "command": "moonbit-tasks.fetch",
          "when": "view == myGitTasksCustomView && moonbit-tasks.hasFetchable == true",
          "group": "navigation@4"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "22.8.1",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.36"
  }
}
